{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üöÄ Initialize Unified Profile",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-Command", "Import-Module UnifiedPowerShellProfile; Initialize-UnifiedProfile -Mode ${input:profileMode} -VSCodeIntegration"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "üéØ Switch Profile Mode",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-Command", "Import-Module UnifiedPowerShellProfile; Switch-ProfileMode"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      }
    },
    {
      "label": "üîß Test Profile Configuration",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-Command", "Import-Module UnifiedPowerShellProfile; Test-ProfileConfiguration"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "üìä Show Profile Status",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-Command", "Import-Module UnifiedPowerShellProfile; Show-AvailableProfiles"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "üßõ‚Äç‚ôÇÔ∏è Launch Dracula Mode",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-NoExit",
        "-Command", "Import-Module UnifiedPowerShellProfile; Initialize-UnifiedProfile -Mode Dracula"
      ],
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "new"
      },
      "isBackground": false
    },
    {
      "label": "üöÄ Launch MCP Mode",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-NoExit",
        "-Command", "Import-Module UnifiedPowerShellProfile; Initialize-UnifiedProfile -Mode MCP"
      ],
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "new"
      },
      "isBackground": false
    },
    {
      "label": "‚ö° Launch LazyAdmin Mode",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-NoExit",
        "-Command", "Import-Module UnifiedPowerShellProfile; Initialize-UnifiedProfile -Mode LazyAdmin"
      ],
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "new"
      },
      "isBackground": false
    },
    {
      "label": "üßπ Update Module Paths",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-Command", "Import-Module UnifiedPowerShellProfile; Update-ModulePath -Force"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "üîç Validate PowerShell Syntax",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-Command", "$file = '${file}'; if ($file -match '\\.(ps1|psm1|psd1)$') { $null = [System.Management.Automation.Language.Parser]::ParseFile($file, [ref]$null, [ref]$null); Write-Host '‚úÖ Syntax is valid!' -ForegroundColor Green } else { Write-Host '‚ö†Ô∏è Not a PowerShell file' -ForegroundColor Yellow }"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ],
  "inputs": [
    {
      "id": "profileMode",
      "description": "Select profile mode",
      "type": "pickString",
      "options": [
        {
          "label": "üßõ‚Äç‚ôÇÔ∏è Dracula - Enhanced theme with productivity features",
          "value": "Dracula"
        },
        {
          "label": "üöÄ MCP - Model Context Protocol with AI integration", 
          "value": "MCP"
        },
        {
          "label": "‚ö° LazyAdmin - System administration utilities",
          "value": "LazyAdmin"
        },
        {
          "label": "üéØ Minimal - Lightweight setup",
          "value": "Minimal"
        },
        {
          "label": "üõ†Ô∏è Custom - User-defined configuration",
          "value": "Custom"
        }
      ],
      "default": "Dracula"
    }
  ]
}
