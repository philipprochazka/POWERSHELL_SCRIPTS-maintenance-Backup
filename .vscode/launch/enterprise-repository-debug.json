{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üöÄ Debug Enterprise Repository Builder",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Build-EnterpriseModuleRepository.ps1",
            "args": [
                "-DryRun"
            ],
            "cwd": "${workspaceFolder}",
            "createTemporaryIntegratedConsole": true,
            "console": "integratedTerminal"
        },
        {
            "name": "‚ö° Debug Quick Enterprise Setup",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Build-EnterpriseModuleRepository.ps1",
            "args": [
                "-Quick",
                "-DryRun"
            ],
            "cwd": "${workspaceFolder}",
            "createTemporaryIntegratedConsole": true,
            "console": "integratedTerminal"
        },
        {
            "name": "üîê Debug Certificate Creation",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Build-EnterpriseModuleRepository.ps1",
            "args": [
                "-CreateCertificate",
                "-DryRun"
            ],
            "cwd": "${workspaceFolder}",
            "createTemporaryIntegratedConsole": true,
            "console": "integratedTerminal"
        },
        {
            "name": "üß™ Debug Pester Tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Tests/Unit/Build-EnterpriseModuleRepository.Tests.ps1",
            "cwd": "${workspaceFolder}",
            "createTemporaryIntegratedConsole": true,
            "console": "integratedTerminal"
        },
        {
            "name": "üîç Debug Script Analysis",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Run-ScriptAnalyzer.ps1",
            "args": [
                "Build-EnterpriseModuleRepository.ps1"
            ],
            "cwd": "${workspaceFolder}",
            "createTemporaryIntegratedConsole": true,
            "console": "integratedTerminal"
        },
        {
            "name": "üõ†Ô∏è Attach to PowerShell Process",
            "type": "PowerShell",
            "request": "attach",
            "customPipeName": "MyCustomPipeName",
            "runspaceId": 1,
            "processId": "${command:PickPSHostProcess}"
        }
    ]
}