            "script": "${workspaceFolder}/PowerShellModules/UnifiedMCPProfile/Public/Invoke-UnifiedProfile.ps1",
            "cwd": "${workspaceFolder}",
            "createTemporaryIntegratedConsole": true,
            "args": [
                "-Mode",
                "Dracula",
                "-Features",
                "@('v4Alpha', 'Performance', 'VSCode')",
                "-UseXMLManifest",
                "-ApplyGlobally",
                "-ShowProgress"
            ],
            "env": {
                "UNIFIED_PROFILE_DEBUG": "true",
                "UNIFIED_PROFILE_MODE": "Dracula",
                "PSModulePath": "${workspaceFolder}/PowerShellModules;${env:PSModulePath}"
            }
        },
        {
            "name": "üîç Debug: System Validation Only",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/PowerShellModules/UnifiedMCPProfile/Public/Invoke-UnifiedProfile.ps1",
            "cwd": "${workspaceFolder}",
            "createTemporaryIntegratedConsole": true,
