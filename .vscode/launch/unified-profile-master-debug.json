            "createTemporaryIntegratedConsole": true,
            "args": [
                "-Mode",
                "MCP",
                "-Features",
                "@('v4Alpha', 'XMLManifests', 'MCP', 'Performance', 'VSCode', 'GitIntegration', 'AITooling')",
                "-UseXMLManifest",
                "-ApplyGlobally",
                "-ValidateFirst",
                "-BackupCurrent",
                "-ShowProgress"
            ],
            "env": {
                "UNIFIED_PROFILE_DEBUG": "true",
                "MCP_INTEGRATION_ENABLED": "true",
