            "cwd": "${workspaceFolder}",
            "createTemporaryIntegratedConsole": true,
            "args": [],
            "env": {
                "UNIFIED_PROFILE_DEBUG": "true",
                "PSModulePath": "${workspaceFolder}/PowerShellModules;${env:PSModulePath}"
            }
        },
        {
            "name": "üåç Debug: Global Profile Deployment",
            "type": "PowerShell",
