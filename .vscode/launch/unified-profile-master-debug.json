            "env": {
                "UNIFIED_PROFILE_DEBUG": "true",
                "MEASURE_PERFORMANCE": "true",
                "PSModulePath": "${workspaceFolder}/PowerShellModules;${env:PSModulePath}"
            }
        }
    ],
    "inputs": [
        {
            "id": "debugMode",
            "description": "Select debug mode",
            "type": "pickString",
            "options": [
                "Dracula",
                "MCP",
                "LazyAdmin",
                "Minimal",
                "Custom",
                "Auto"
            ],
            "default": "Auto"
        },
        {
            "id": "debugFeatures",
            "description": "Select features for debugging",
            "type": "pickString",
            "options": [
                "v4Alpha,MCP,Performance",
                "XMLManifests,VSCode,GitIntegration",
                "AITooling,MCP,VSCode",
