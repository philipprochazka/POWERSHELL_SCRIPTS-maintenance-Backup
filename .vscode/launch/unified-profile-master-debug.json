{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üöÄ Debug: Unified Profile Master",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/PowerShellModules/UnifiedMCPProfile/Public/Invoke-UnifiedProfile.ps1",
            "cwd": "${workspaceFolder}",
            "createTemporaryIntegratedConsole": true,
            "args": [
                "-Mode",
                "Dracula",
                "-Features",
                "@('v4Alpha', 'MCP', 'Performance')",
                "-UseXMLManifest",
                "-ShowProgress",
                "-ValidateFirst"
            ],
            "env": {
                "UNIFIED_PROFILE_DEBUG": "true",
                "PSModulePath": "${workspaceFolder}/PowerShellModules;${env:PSModulePath}"
            }
        },
        {
            "name": "ü§ñ Debug: Auto-Detect Mode",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/PowerShellModules/UnifiedMCPProfile/Public/Invoke-UnifiedProfile.ps1",
            "cwd": "${workspaceFolder}",
            "createTemporaryIntegratedConsole": true,
            "args": [
                "-DetectEnvironment",
                "-UseXMLManifest",
                "-ShowProgress"
            ],
            "env": {
                "UNIFIED_PROFILE_DEBUG": "true",
                "PSModulePath": "${workspaceFolder}/PowerShellModules;${env:PSModulePath}"
            }
        },
        {
